import board
import time
import digitalio

N = 11 
print('test')

ledred = digitalio.DigitalInOut(board.GP13)
ledred.direction = digitalio.Direction.OUTPUT


ledgreen = digitalio.DigitalInOut(board.GP18)
ledgreen.direction = digitalio.Direction.OUTPUT

buttonpin = digitalio.DigitalInOut(board.GP0)
buttonpin.direction = digitalio.Direction.INPUT
buttonpin.pull = digitalio.Pull.UP
while True:

    if buttonpin == False:
 
        while True:

            N -= 1 

            print(N)

            if N > 0:  

                time.sleep(.5)
                ledred.value = True
                time.sleep(.5)
                ledred.value = False

            if N <= 0:
                print('LIFT OFF')
                ledgreen.value = True
                time.sleep(2.5)
                break
    